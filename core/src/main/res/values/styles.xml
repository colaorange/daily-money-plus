<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="rowItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="editorFieldTitle" parent="rowItem">
        <item name="android:layout_marginLeft">5dp</item>
    </style>
    <style name="editorFieldInput" parent="rowItem">
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
    </style>

    <style name="editorActionBtn">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>
    <style name="navActionBtn">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:padding">12dp</item>
    </style>
    <style name="editorToolIconBtn">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingLeft">14dp</item>
        <item name="android:paddingRight">14dp</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="cardLight" parent="CardView.Light">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_margin">4dp</item>
        <item name="cardBackgroundColor">?appPrimaryLightColor</item>
    </style>
    <style name="cardDark" parent="CardView.Dark">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_margin">4dp</item>
        <item name="cardBackgroundColor">?appPrimaryLightColor</item>
    </style>
    <style name="cardLight.ActionOverflow" parent="Widget.AppCompat.Light.ActionButton.Overflow">
        <item name="android:src">?ic_more_vert</item>
    </style>
    <style name="cardDark.ActionOverflow" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:src">?ic_more_vert</item>
    </style>
    <style name="lightActionButtonStyle" parent="Widget.AppCompat.Light.ActionButton">
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
    </style>
    <style name="darkActionButtonStyle" parent="Widget.AppCompat.ActionButton">
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
    </style>
</resources>
