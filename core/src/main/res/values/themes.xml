    <style name="AppTheme" parent="Theme.AppCompat">
        <item name="appPrimaryColor">@color/appPrimary</item>
        <item name="appPrimaryDarkColor">@color/appPrimaryDark</item>
        <item name="appPrimaryLightColor">@color/appPrimaryLight</item>
