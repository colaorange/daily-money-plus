        <item name="appSecondaryLightColor">@color/appSecondaryLight</item>
        <item name="appSecondaryTextColor">@color/appSecondaryText</item>

        <!--overwrite color pallet -->
        <!-- app branding color for the app bar-->
        <item name="colorPrimary">@color/appPrimary</item>
        <!-- darker color for app status or action bar -->
        <item name="colorPrimaryDark">@color/appPrimaryDark</item>
        <!-- ui controls like checkboxs and text fields -->
        <item name="colorAccent">@color/appSecondary</item>
        <!-- optional for normal status of control -->
        <item name="colorControlNormal">@color/appPrimaryLight</item>
        <!-- optional for activated/checked status of control -->
        <item name="colorControlActivated">@color/appSecondaryLight</item>
        <!-- optional for ripple of control -->
        <item name="colorControlHighlight">@color/appPrimaryLight</item>
