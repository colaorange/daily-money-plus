<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/record_list_item">

    <RelativeLayout android:id="@+id/layout_select"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/account_item_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:layout_marginLeft="10dp"
            android:textSize="?textSize" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/account_item_name"
            android:layout_marginLeft="20dp">

            <TextView
                android:id="@+id/account_item_initvalue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="?textSizeSmall" />

            <ImageView
                android:id="@+id/account_item_initvalue_icon"
                android:layout_width="wrap_content"
                android:layout_height="?textSizeMedium"
                android:paddingTop="2dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:src="?ic_last_page"
                />
            <TextView
                android:id="@+id/account_item_initvalue_update"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="?textSizeSmall" />
        </LinearLayout>


        <TextView
            android:id="@+id/account_item_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/account_item_name"
            android:layout_marginRight="10dp"
            android:textSize="?textSizeSmall"
            android:textStyle="italic" />
    </RelativeLayout>
</LinearLayout>

