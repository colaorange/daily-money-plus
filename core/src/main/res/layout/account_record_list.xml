<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.legacy.AccountRecordListActivity"
    android:background="?appPrimaryLightColor"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/account_detail_list_infobar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/account_detail_list_info_bg"
        android:ellipsize="end"
        android:gravity="center"
        android:singleLine="true"
        android:text=""
        android:textColor="@color/account_detail_list_info_fg"
        android:textSize="16sp" />

    <ListView
        android:id="@+id/account_detail_list_list"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />
</LinearLayout>
