<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.colaorange.dailymoney">

    <!--backup-restore-->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <!--remote backup-->
    <uses-permission android:name="android.permission.INTERNET" />
    <!--ga-->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".context.ContextsApp"
        android:allowBackup="true"
        android:icon="@mipmap/app_icon"
        android:label="@string/app_name">
        android:theme="@style/AppTheme">
        <!--android:supportsRtl="true">-->

        <activity android:name=".ui.DesktopActivity" android:theme="@style/AppTheme"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".ui.BookMgntActivity" android:theme="@style/AppTheme"
            android:label="@string/title_bookmgnt" />
        <activity android:name=".ui.BookEditorActivity" android:theme="@style/AppTheme"
            />

        <activity android:name=".ui.DetailListActivity" android:theme="@style/AppTheme"
            android:label="@string/title_detlist" />
        <activity android:name=".ui.DetailEditorActivity" android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"></action>
            </intent-filter>
        </activity>
        <activity android:name=".ui.AccountMgntActivity" android:label="@string/title_accmgnt" android:theme="@style/AppTheme"/>
        <activity android:name=".ui.AccountEditorActivity" android:theme="@style/AppTheme"/>
        <activity android:name=".ui.AccountDetailListActivity" android:theme="@style/AppTheme"/>
        <activity android:name=".ui.PrefsActivity" android:label="@string/title_prefs" android:theme="@style/AppTheme"/>
        <activity android:name=".ui.DataMaintenanceActivity" android:label="@string/title_datamain" android:theme="@style/AppTheme"/>
        <activity android:name=".ui.PasswordProtectionActivity" android:theme="@style/AppTheme.Dialog" android:label="@string/title_pdprotection"/>
        <activity android:name=".ui.report.BalanceActivity" android:theme="@style/AppTheme" android:label="@string/label_balance"/>
        <activity android:name=".ui.AboutActivity" android:theme="@style/AppTheme"/>
        <activity android:name=".ui.LocalWebViewActivity" android:theme="@style/AppTheme"/>
        <activity android:name=".ui.LocalWebViewDlg" android:theme="@style/AppTheme.Dialog.NoTitle"/>
        <activity android:name="org.achartengine.GraphicalActivity" android:theme="@style/AppTheme.NoTitle"/>

        <activity android:name="com.colaorange.calculator2.Calculator" android:theme="@style/AppTheme.NoTitle"/>
    </application>

</manifest>